@model Service
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>

                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Name" for="exampleInputName1"></label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Title" for="exampleInputName1"></label>
                        <textarea asp-for="Title" rows="6" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Title"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Service" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}