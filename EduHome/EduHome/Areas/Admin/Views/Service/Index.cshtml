@model List<Service>
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Service Table</h4>
                    <a asp-action="Create" class="btn btn-outline-info  btn-rounded">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th class=" d-flex justify-content-end">
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Service item in Model)
                            {

                                <tr>

                                    <td>
                                        @item.Name
                                    </td>
                                    <td class="d-flex justify-content-end ">
                                        <a class="btn btn-outline-info mx-2 btn-rounded" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-outline-danger mx-2 btn-rounded" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="btn btn-outline-success mx-2 btn-rounded" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
               